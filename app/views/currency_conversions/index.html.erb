
<div class="col-md-12">
  <h1 class="head-title">Conversions</h1>
  <div class="card mb-3">
    <%= render 'form' %>
  </div>
  <div class="card">
    <div class="row">
      <div class="col-lg-12">
        <div class="card-body table-responsive">
          <table class="table table-hover table-valign-middle table-borderless conversion-table">
            <thead>
              <tr>
                <th>Base currency</th>
                <th>Target currency</th>
                <th>Base amount</th>
                <th>Number Of Weeks</th>
                <th colspan="3">Action</th>
              </tr>
            </thead>
            <tbody id="conversionTable">
              <% @currency_conversions.each do |conversion| %>
                <tr>
                  <td>
                    <%= conversion.base_currency %>
                  </td>
                  <td>
                    <%= conversion.target_currency %>
                  </td>
                  <td>
                    <%= conversion.base_amount %>
                  </td>
                  <td>
                    <%= conversion.week_count %>
                  </td>
                  <td>
                    <div class="action-container">
                      <%= link_to conversion do %>
                       <i aria-hidden="true" class="fa fa-eye" data-toggle="tooltip" title="View Details"></i>
                      <% end %>
                      <%= link_to edit_currency_conversion_path(conversion) do %>
                        <i aria-hidden="true" class="fa fa-pencil" data-toggle="tooltip" title="Edit"></i>
                      <% end %>
                      <%= link_to conversion, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i aria-hidden="true" class="delete-conversion fa fa-trash" data-toggle="tooltip" id="" name="" title="Delete"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="pagination-links">
    <%= link_to 'New Conversion', new_currency_conversion_path, {:class => 'btn btn-primary pull-right mt-3 mb-3'}  %>
  </div>
</div>
  



